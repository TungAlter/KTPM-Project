@{
    ViewData["Title"] = "Login Page";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />


@* UI *@
<div class="imgBackGround">
    <div id="mainLogin">
        <div class="container-login right-panel-active">
            <!-- Sign Up -->
            <div class="container__form container--signup">
                <form action="#" class="form" id="form1">
                    <h2 class="form__title">Sign Up</h2>
                    <input type="text" placeholder="Username" class="input" />
                    <input type="password" placeholder="Password" class="input" />
                    <input type="password" placeholder="Confirm Password" class="input" />
                    <button class="btn">Sign Up</button>
                </form>
            </div>

            <!-- Sign In -->
            <div class="container__form container--signin">
                <form action="#" class="form" id="form2">
                    <h2 class="form__title">Sign In</h2>

                    <input id="username-signin" type="text" placeholder="Username" class="input" />
                    <input id="pass-signin" type="password" placeholder="Password" class="input" />
                    <div class="form__icons">
                        <img class="form__icon"
                            src="data:image/svg+xml;base64,"
                            alt="">
                        <!-- <img class="form__icon" src="data:image/svg+xml;base64,"> -->
                        <img class="form__icon" src="https://cdn.onlinewebfonts.com/svg/img_428203.png">
                    </div>
                    <a href="#" class="link">Forgot your password?</a>
                    <button class="btn">Sign In</button>
                </form>
            </div>

            <!-- Overlay -->
            <div class="container__overlay">
                <div class="overlay">
                    <div class="overlay__panel overlay--left">
                        <h2 style="color: aliceblue;">Welcome Back !</h2>
                        <p style="color: aliceblue; font-size: 15px;">To keep connected with us please login with your
                            personal info</p>
                        <button class="btn" id="signIn">Sign in</button>
                    </div>
                    <div class="overlay__panel overlay--right">
                        <h2 style="color: aliceblue;">Hello Friend !</h2>
                        <p style="color: aliceblue; font-size: 15px;">Enter your personal details and start journey with
                            us</p>
                        <button class="btn" id="signUp">Sign Up</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    const signInBtn = document.getElementById("signIn");
    const signUpBtn = document.getElementById("signUp");
    const fistForm = document.getElementById("form1");
    const secondForm = document.getElementById("form2");
    const container = document.querySelector(".container-login");


    // Thêm lớp "right-panel-active" để mặc định hiển thị phần đăng nhập
    container.classList.remove("right-panel-active");

    // Đăng ký sự kiện click cho nút đăng nhập và đăng ký
    signInBtn.addEventListener("click", () => {
        container.classList.remove("right-panel-active");
    });

    signUpBtn.addEventListener("click", () => {
        container.classList.add("right-panel-active");
    });

    signInBtn.addEventListener("click", () => {
        container.classList.remove("right-panel-active");
    });

    signUpBtn.addEventListener("click", () => {
        container.classList.add("right-panel-active");
    });

    // Object to store user information
    const userInformation = {
        username: "",
        password: "",
    };

    const url = 'http://localhost:5236/api/Auth/register-user';

    const headers = {
        'accept': 'text/plain',
        'Content-Type': 'application/json'
    };

    @* const headers = {'Content-Type':'application/json',
        'Access-Control-Allow-Origin':'*',
        'Access-Control-Allow-Methods':'POST,PATCH,OPTIONS'} *@

        fistForm.addEventListener("submit", async (e) => {
            e.preventDefault(); // Prevent the form from submitting

            const usernameField = fistForm.querySelector('input[type="text"]');
            const passwordField = fistForm.querySelector('input[type="password"]');
            const confirmPasswordField = fistForm.querySelectorAll('input[type="password"]')[1]; // Get the second password field

            // You can perform validation here and show appropriate messages
            if (usernameField.value === "" || passwordField.value === "" || confirmPasswordField.value === "") {
                alert("Please fill in all fields");
            } else if (passwordField.value !== confirmPasswordField.value) {
                alert("Passwords do not match");
            } else {
                // Save user information to the object
                userInformation.username = usernameField.value;
                userInformation.password = passwordField.value;

                // Clear the form
                fistForm.reset();
                console.log(userInformation);

                // Send user information to the server using an API
                try {
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: headers,
                        body: JSON.stringify(userInformation)
                    });

                    console.log(response.body);
                    if (response.ok) {
                        alert("Sign up successful");
                        // Perform other actions as needed
                    } else {
                        alert("username invalid. Please try again later.");
                    }
                } catch (error) {
                    console.error("An error occurred:", error);
                }
            }
        });



    secondForm.addEventListener("submit", async (e) => {
        e.preventDefault(); // Prevent the form from submitting

        const usernameField = secondForm.querySelector('input[type="text"]');
        const passwordField = secondForm.querySelector('input[type="password"]');
        console.log(usernameField + " and " + passwordField);

        // You can perform validation here and show appropriate messages
        if (usernameField.value === "" || passwordField.value === "") {
            alert("Please fill in all fields");
        } else {
            // Save user information to the object
            userInformation.username = usernameField.value;
            userInformation.password = passwordField.value;

            // Send user information to the server using an API
            try {
                const response = await fetch("http://localhost:5236/api/Auth/login", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(userInformation),
                });

                response.json().then(function (result) {
                    // Trích xuất dữ liệu từ thuộc tính "data"
                    const responseData = result.data;
                    localStorage.setItem('AuthToken', JSON.stringify(responseData));
                    console.log(responseData); // In ra dữ liệu
                }).catch(function (error) {
                    // Xử lý lỗi nếu có
                    console.error(error);
                });

                if (response.ok) {
                    alert("Sign in successful");
                    // Perform other actions as needed
                } else {
                    alert("Error signing in. Please check your credentials.");
                }
            } catch (error) {
                console.error("An error occurred:", error);
            }
        }
    });
</script>
