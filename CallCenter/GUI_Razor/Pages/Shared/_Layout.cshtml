<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GUI_Razor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GUI_Razor.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,600;1,700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header" id="header">
        <a class="logo" asp-area="" asp-page="/Index">CALL CENTER</a>
        <ul class="nav-opts">
            <li><a class="nav-link"  asp-page="/Index">Home</a></li>
            @* <li><a class="nav-link"  asp-page="">Home_S1</a></li> *@
            <li><a class="nav-link"  asp-page="/HomeS2">Home_S2</a></li>
            <li><a class="nav-link"  asp-page="/Privacy">Privacy</a></li>       
        </ul>
        <div class="nav-auth">
            <a class="loginbtn" asp-area="" asp-page="./Login/Login">Login</a> 
        </div>
        <button type="button" class="menu-btn">
            <i class="bi bi-list"></i>
        </button>
    </header>
        
    @RenderBody()

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - GUI_Razor - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        const currentPath = window.location.pathname; // Lấy đường dẫn hiện tại
        console.log('đường dẫn: ' + currentPath);
        const navLinks = document.querySelectorAll(".nav-link");
        navLinks.forEach(link => {
            if (link.getAttribute("href") === currentPath) {
                console.log('nav tương ứng: ' + link.getAttribute("href"));
                link.classList.add("active");
                @* link.style.backgroundColor = "green"; *@
            }
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

